// Search functionality
document.querySelector('.search-bar button')?.addEventListener('click', function() {
    const searchTerm = document.querySelector('.search-bar input').value;
    if (searchTerm.trim() !== '') {
        alert(`Searching for: ${searchTerm}`);
        // In real implementation: fetch/search products
    }
});

// Price range display
const priceSlider = document.querySelector('input[type="range"]');
if (priceSlider) {
    const priceValue = document.querySelector('.price-range-value');
    priceSlider.addEventListener('input', function() {
        priceValue.textContent = `Ksh ${Number(this.value).toLocaleString()}`;
    });
}

