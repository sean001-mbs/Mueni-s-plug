  <script>
    // Simple animations
    document.addEventListener('DOMContentLoaded', function() {
      // Animate category cards on page load
      const categoryCards = document.querySelectorAll('.category-card');
      categoryCards.forEach((card, index) => {
        setTimeout(() => {
          card.style.opacity = '1';
          card.style.transform = 'translateY(0)';
        }, 150 * index);
      });
      
      // Search functionality
      const searchBtn = document.querySelector('.search-bar button');
      searchBtn.addEventListener('click', function() {
        const searchTerm = document.querySelector('.search-bar input').value;
        if(searchTerm.trim() !== '') {
          alert(`Searching for: "${searchTerm}"\nThis would show results in a real implementation.`);
        }
      });
      
      // Category card clicks
      const cards = document.querySelectorAll('.category-card');
      cards.forEach(card => {
        card.addEventListener('click', function() {
          const categoryName = this.querySelector('h3').textContent;
          alert(`Browsing ${categoryName} category\nThis would show category listings in a real implementation.`);
        });
      });
    });
  </script>
